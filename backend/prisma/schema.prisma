generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  name String
  age  Int

  @@map("users") // <-- lie le modèle Prisma à la table MySQL existante
}

model Site {
  id   Int     @id @default(autoincrement())
  name String
  desc String?

  @@map("sites") // <-- lie le modèle Prisma à la table MySQL existante
}
